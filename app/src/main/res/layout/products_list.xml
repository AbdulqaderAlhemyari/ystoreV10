<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:id="@+id/ProductCard"

        android:elevation="15dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:layout_above="@+id/title_linear"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/ii">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        >

                    </TextView>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@drawable/shapeforprice"
                        android:text="$1200"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        >

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_linear"
                    android:layout_width="match_parent"
                    android:layout_height="103dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.4"
                            android:text="Iphone 12"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"

                            ></TextView>
                        <TextView
                            android:id="@+id/deatils"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="red iphone 12 128Gb"
                            android:gravity="center"
                            ></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_Raiting"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/add_raiting"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="1">

                        </ImageView>
                        <TextView
                            android:id="@+id/Raitings"
                            android:layout_width="150dp"
                            android:gravity="right|center"
                           android:padding="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="1.5"

                            android:layout_height="match_parent"
                           >

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>