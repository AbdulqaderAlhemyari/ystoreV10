<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="6dp"
        android:id="@+id/ProductCard"

        android:elevation="15dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Adulterated product"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="#ffffff"
                    android:background="@color/blue_A100"
                    />
                <TextView
                    android:id="@+id/report2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  The price is overrated"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="@color/blue_A100"
                    android:layout_margin="10dp"

                    />
                <TextView
                    android:id="@+id/report3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  The product is not in the required specifications"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="#ffffff"
                    android:background="@color/blue_A100"/>
                <TextView
                    android:id="@+id/report4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="  The product is an imitation"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="@color/blue_A100"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:id="@+id/save"
                        android:layout_margin="5dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_margin="5dp"
                        android:id="@+id/cancle"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>